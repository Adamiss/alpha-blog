<%= render 'shared/errors', obj: @article %>
<div class="form ">
  <div class="col-md-12">
    <%= form_for @article do |f| %>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :title %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :title, class:"form-horizontal", placeholder:"Title of article", autofocus:true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :description %>
      </div>
      <div class="col-md-8">
        <%= f.text_area :description, class:"form-control col-sm-12", placeholder: "Body of article" %>
      </div>
    </div>
      <div class="form-group">
        <div class="row">
          <div class="col-md-offset-2 col-md-8 form-check">
            <%=  f.collection_check_boxes :category_ids, Category.all , :id , :name do |cb| %>
              <% cb.label(class: "form-check form-check-inline") {cb.check_box(class: "check") + cb.text} %>
              <% end %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-2 col-md-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
  </div>
</div>